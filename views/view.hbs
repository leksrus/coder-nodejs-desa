   
   <div class="col-12">
       <h1 class="text-center">Products view</h1>
   </div>
   
    
  
<div class="col-12">
    <div class="mt-3">
        <form class="form-inline"  onsubmit="return addProduct()" autocomplete="off">
            <input type="text" name="title" id="title" class="form-control my-2 mr-2" placeholder="Title">
            <input type="text" name="price" id="price" class="form-control my-2 mr-2" placeholder="Price">
            <input type="text" name="thumbnails" id="thumbnails" class="form-control my-2 mr-2" placeholder="Image Link">
            <input class="btn btn-primary my-2" type="submit" value="Create!">
        </form> 
    </div> 
</div>

<div class="col-12">
     <table id="products" class="table mt-3">
        </table>
</div>

       
<div class="col-12">
    <div class="mt-3">
    <form class="form-inline" onsubmit="return addMessage()" autocomplete="off">
      <input type="text" id="email" class="form-control my-2 mr-2" placeholder="Email">
      <input type="text" id="message" class="form-control my-2 mr-2" placeholder="Text a message">
      <input class="btn btn-primary my-2" type="submit" value="Send!">
    </form>
  </div>
</div>
  
  <div class="col-12">
        <div id="messages" class="mt-3"></div>
  </div>
    

   
